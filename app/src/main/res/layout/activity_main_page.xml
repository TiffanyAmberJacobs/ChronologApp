<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainPage">

    <Button
        android:id="@+id/btnAddCat"
        android:layout_width="157dp"
        android:layout_height="0dp"
        android:layout_marginTop="242dp"
        android:layout_marginBottom="22dp"
        android:text="Create Category"
        app:layout_constraintBottom_toTopOf="@+id/btnAddTask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSetGoalMain"
        android:layout_width="148dp"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        android:text="Set Goal"
        app:layout_constraintBottom_toTopOf="@+id/btnViewTasks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddTask" />

    <Button
        android:id="@+id/btnAddTask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="77dp"
        android:text="Add Timesheet"
        app:layout_constraintBottom_toTopOf="@+id/btnSetGoalMain"
        app:layout_constraintEnd_toEndOf="@+id/btnSetGoalMain"
        app:layout_constraintStart_toStartOf="@+id/btnAddCat"
        app:layout_constraintTop_toBottomOf="@+id/btnAddCat" />

    <Button
        android:id="@+id/btnViewTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="View Timesheets"
        app:layout_constraintBottom_toTopOf="@+id/btnCatHours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSetGoalMain" />

    <Button
        android:id="@+id/btnCatHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:text="View Hours Spent on Catagory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViewTasks" />
</androidx.constraintlayout.widget.ConstraintLayout>